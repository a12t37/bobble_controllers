<launch>
  <!-- Load common test stuff -->
  <include file="$(find bobble_controllers)/test/common.launch" />
  <rosparam file="$(find bobble_controllers)/test/bad_balance_control_config.yaml"
			  command="load"/>
  <!-- Controller test -->
  <test test-name="no_balance_test"
        pkg="bobble_controllers"
        type="no_balance_test"
        time-limit="30.0">
  </test>
  <node pkg="rosbag" type="record" name="rosbag_record_standard_data" respawn="true" output="screen" args="-o $(find bobble_controllers)/test/no_balance_test_data /bobble/bobble_balance_controller/bb_controller_status" />
</launch>
